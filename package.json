{
  "name": "easygarlic",
  "description": "GUI Miner for Garlicoin",
  "version": "0.0.0-development",
  "private": true,
  "main": "public/electron.js",
  "author": "Pandawan",
  "homepage": "./",
  "dependencies": {
    "aphrodite": "^2.2.3",
    "color": "^3.1.0",
    "electron-is-dev": "^1.0.1",
    "electron-store": "^2.0.0",
    "formik": "^1.3.1",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "3.1.0",
    "react-select": "^2.1.1",
    "react-sortable-hoc": "^0.8.3",
    "systeminformation": "^3.45.9",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "start": "yarn electron-dev",
    "build": "yarn electron-pack",
    "cra-start": "react-scripts-ts start",
    "cra-build": "react-scripts-ts build",
    "cra-test": "react-scripts-ts test --env=jsdom",
    "cra-eject": "react-scripts-ts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none yarn cra-start\" \"wait-on http://localhost:3000 && electron .\"",
    "preelectron-pack": "yarn cra-build",
    "electron-pack": "build -p never --c.extraMetadata.main=build/electron.js",
    "electron-pack-linux": "build -p never --linux --c.extraMetadata.main=build/electron.js",
    "electron-pack-win": "build -p never --win --c.extraMetadata.main=build/electron.js",
    "electron-pack-macos": "build -p never --mac --c.extraMetadata.main=build/electron.js",
    "electron-pack-docker": "build -p never --linux --win --c.extraMetadata.main=build/electron.js",
    "inject-semantic-release": "semantic-release -d -p ./scripts/inject-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/color": "^3.0.0",
    "@types/electron-is-dev": "^0.3.0",
    "@types/electron-store": "^1.3.0",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.12.0",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-select": "^2.0.6",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "electron": "^3.0.4",
    "electron-builder": "^20.28.4",
    "electron-devtools-installer": "^2.2.4",
    "husky": "^1.1.3",
    "last-release-git": "^0.0.3",
    "prettier": "^1.14.3",
    "semantic-release": "^15.10.7",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.3",
    "wait-on": "^3.1.0"
  },
  "build": {
    "appId": "xyz.pandawan.easygarlic",
    "productName": "EasyGarlic 2",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "requestedExecutionLevel": "highestAvailable",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "pacman",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "apk",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PandawanFr/EasyGarlic2.git"
  },
  "release": {
    "getLastRelease": "last-release-git",
    "branch": "release",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
