{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["./src"]
            }
        }
    },
    "rules": {
        "react/jsx-filename-extension": "false",
        "react/prefer-stateless-function": "false",
        "react/jsx-one-expression-per-line": false,
        "jsx-a11y/heading-has-content": false,
        "import/no-extraneous-dependencies": false,
        "semi": [
            "error",
            "always"
        ]
    },
    "extends": "airbnb"
}